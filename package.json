{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "tsc && vite build && node server.js",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "format": "prettier . --write",
    "slint": "stylelint \"**/*.scss\"",
    "slint:fix": "stylelint \"**/*.scss\" --fix",
    "test": "mocha --es-module-specifier-resolution=node --require ts-node/register",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/chai": "^4.3.17",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.16.1",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vituum/vite-plugin-handlebars": "^1.1.0",
    "chai": "^5.1.1",
    "ember-template-lint-plugin-prettier": "^5.0.0",
    "eslint": "^8",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.19.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "mocha": "^10.7.3",
    "prettier": "3.2.5",
    "prettier-plugin-hbs": "^1.0.1",
    "sass": "^1.76.0",
    "sinon-chai": "^4.0.0",
    "stylelint": "^16.4.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.2.1",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.10",
    "vite-plugin-checker": "^0.7.2"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "handlebars-layouts": "^3.1.4",
    "jsdom": "^24.1.1",
    "meow": "^9.0.0",
    "sinon": "^18.0.0",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "engines": {
    "node": ">=18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run lint:fix"
    ],
    "*.scss": [
      "npm run slint:fix"
    ]
  }
}
