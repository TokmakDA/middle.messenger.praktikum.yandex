{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "dom"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "mocha", "node"],
    "plugins": [
      {
        "name": "typescript-hbs-plugin"
      }
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "src/globals.d.ts",
    "src/@types",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.test.ts",
    ".eslintrc.cjs",
    "vite.config.ts",
    "vite-plugin-handlebars-precompile.ts",
    "server.js"
  ]
}
