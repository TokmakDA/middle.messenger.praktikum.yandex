<div class="input">
  <label class="input__container" for="{{name}}">
    <input
      type="{{type}}"
      class="input__element"
      id="{{name}}"
      placeholder="{{label}}"
      value="{{value}}"
      name="{{name}}"
      required="{{required}}"
    />
    <div class="input__label">{{label}}</div>
  </label>
  <span class="input__error">{{error}}</span>
</div>
