{{#extend "layout"}}
  {{#content "content"}}
    <div class="page__modal modal">
      <h2 class="modal__title">
        Вход
      </h2>
      <form class="modal__form form" name="login-form">
        <div class="form__inputs">
          {{#each inputsList}}
            {{> input}}
          {{/each}}
        </div>
        <div class="form__inputs">
          {{> button text='Войти' type='submit'}}
          {{> link text="Зарегистрироваться" url="/signup"}}
        </div>
      </form>
    </div>
  {{/content}}
{{/extend}}